{
  "name": "cloudparty-server",
  "version": "1.0.0",
  "description": "A managed host for game servers",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --transpile-only -r tsconfig-paths/register src/index.ts | pino-pretty -c -l",
    "debug": "tsnd --transpile-only --inspect --files src/index.ts | pino-pretty -c -l",
    "cli": "tsnd --transpile-only --files src/index.ts --cli",
    "cli:debug": "tsnd --transpile-only --inspect --files src/index.ts --cli",
    "test": "jest",
    "build": "tsc -p tsconfig.prod.json",
    "prebuild": "rimraf dist"
  },
  "author": "Leonardo Vargas <leocarvalho.vargas@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.3",
    "awilix": "^7.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pino": "^7.11.0",
    "pino-http": "^7.1.0",
    "sequelize": "^6.19.2",
    "types-joi": "^2.1.0",
    "uuid": "^8.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "testRegex": "(/__tests__/.*(test|spec))\\.[jt]sx?$",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./src/__tests__/setup.ts"
    ]
  }
}
